.popupBox {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9999;
}

.popupBox-flex {
  display: flex;
  justify-content: center;
  align-items: center;
}

.popupBox-ab {
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.popup {
  background-color: #fff;
  border-radius: 20rpx;
}

.title {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  border-bottom: 1rpx #ccc solid;
}
