/* pages/detail/detail.wxss */
@import "../../tpl/comment/comment.wxss";

page {
  background-color: rgb(234, 234, 234);
  font-size: 28rpx;
}

text {
  color: #353535;
}

.card {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.circles {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 20rpx 0 20rpx;
}

.circle {
  width: 15rpx;
  height: 15rpx;
  background-color: lightblue;
  border-radius: 50%;
  border: 5rpx solid rgb(21, 130, 246);
  box-shadow: 0 0 8rpx rgb(21, 130, 246);
}

.title {
  text-align: center;
  padding-bottom: 30rpx;
  border-bottom: 1px solid rgb(234, 234, 234);
  font-size: 38rpx;
}

.desc {
  display: flex;
  padding: 40rpx;
}

.desc-label {
  width: 200rpx;
  color: #888;
}

.desc-content {
  width: 100%;
  color: #888;
}

.time {
  padding-right: 40rpx;
  padding-bottom: 40rpx;
  text-align: right;
}

.list {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.list-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1px solid rgb(234, 234, 234);
}

.plusBox {
  width: 50rpx;
  height: 50rpx;
}

.icon-plus {
  transform: rotate(45deg);
}

.opacity {
  opacity: 0.6;
}

.comment-input {
  position: fixed;
  display: block;
  z-index: 100;
  /* border-top: 1px solid rgb(234, 234, 234); */
  box-sizing: border-box;
  background-color: rgb(234, 234, 234);
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 0;
  min-height: 80rpx;
}

.comment-input .textarea {
  border: 0;
  background-color: #fff;
  border-radius: 10rpx;
  font-size: 32rpx;
  padding: 10rpx;
  width: auto;
  height: 340rpx;
  margin: 20rpx;
}

.comment-input .buttonBox {
  margin: 40rpx 0;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
}

.comment-input .button {
  margin: 0 20rpx;
  width: 50%;
}

.executorBox {
  max-width: 580rpx;
  text-align: right;
}

.executorBox text {
  display: inline-block;
  white-space: nowrap;
}

.list-item .label {
  flex: 0 0 80rpx;
}

.list-item .text {
  word-break: break-all;
}
